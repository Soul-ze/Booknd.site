<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE struts PUBLIC
        "-//Apache Software Foundation//DTD Struts Configuration 2.5//EN"
        "http://struts.apache.org/dtds/struts-2.5.dtd">
<struts>
<constant name="struts.devMode" value="true" />
   <package name="dev" extends="json-default">

      <action name="AuthorBeforeSearch"
            class="com.yumi.test.UIAjaxAction"
            method="searchAuthor">
            <result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

      <action name="BookSearchMode" 
            class="com.yumi.test.UIAjaxAction" 
            method="searchBooks">
            <result name="success" type="json">
            	<param name="root">map</param>
            </result>
            <result name="error">
            	<param name="root">map</param>
            </result>
      </action>
      
      <action name="GetTargetBook" 
            class="com.yumi.test.UIAjaxAction" 
            method="getInfo">
            <result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

	  <action name="UploadCover"
      		class="com.yumi.test.UIAjaxAction"
      		method="uploadCover">
      		<result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

	  <action name="UploadAvatar"
      		class="com.yumi.test.UIAjaxAction"
      		method="uploadAvatar">
      		<result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

      <action name="UploadBook"
      		class="com.yumi.test.UIAjaxAction"
      		method="uploadBook">
      		<result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

	  <action name="GetAuthorInfo"
      		class="com.yumi.test.UIAjaxAction"
      		method="getAuthorInfo">
      		<result name="success" type="json">
            	<param name="root">map</param>
            </result>
      </action>

   </package>
   

   <!-- Syn -->
   <package name="synAction" extends="struts-default">
      	<action name="OpenEditPage"
      		class="com.yumi.test.SynAction"
      		method="openEditPage">
      		<result name="success">/edit-page.jsp</result>
      	</action>
      	
   </package>
</struts>